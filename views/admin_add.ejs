<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Content Management</title>
    <!-- Add Bootstrap 5 CSS link -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body id="indexejs">
    <%- include ('header') %>

    <div class="mx-5">
        <h1 class="mt-1">Content Management</h1>

        <!-- Navigation Menu -->
        <ul class="nav nav-tabs mt-4">
            <li class="nav-item">
                <a class="nav-link active" href="#add-content" data-bs-toggle="tab">Add Content</a>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content mt-4">

            <!-- Add Content Tab -->
            <div class="tab-pane active" id="add-content">
                
                <form action="/admin/add/run" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="title" class="form-control" id="title">
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label>
                        <select class="form-select" id="category" name="category">
                            <option value="IOT Arduino">IOT Arduino</option>
                            <option value="Website">Website</option>
                            <option value="Program">Program</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <input type="text" name="description" class="form-control" id="description">
                    </div>
                    <div class="mb-3">
                        <label for="photo" class="form-label">Upload Photo</label>
                        <input type="file" name="photo" class="form-control" id="photo" required>
                    </div>
                    <div class="mb-3">
                        <label for="zipfile" class="form-label">Upload ZIP File</label>
                        <input type="file" name="zipfile" class="form-control" id="zipfile" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Content</button>
                </form>

            </div>
        </div>
    </div>

    <!-- Add Bootstrap 5 JavaScript and Popper.js script links -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Content Management</title>
    <!-- <link rel="stylesheet" href="/css/style.css"> -->
    <!-- Add Bootstrap 5 CSS link -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body id="indexejs">
    <%- include ('header') -%>

    <div class="mx-5">
        <h1 class="mt-1 ">Content Management</h1>

        <!-- Navigation Menu -->
        <ul class="nav nav-tabs mt-4">
            <li class="nav-item">
                <a class="nav-link active" href="#add-delete" data-bs-toggle="tab">Delete Content</a>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content mt-4">

            <!-- Add Content Tab -->
            <div class="tab-pane active" id="add-content">
                
                <form action="/admin/delete/run" method="POST">
                    <div class="mb-3">
                        <label for="content_id" class="form-label">ID</label>
                        <input type="number" name="content_id" class="form-control" id="content_id">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Reason Why Delete</label>
                        <input type="text" name="reason" class="form-control" id="reason" style="padding-bottom: 10%;">
                    </div>
                    <button type="submit" class="btn btn-primary">Delete Content</button>
                </form>

            </div>
        </div>
    </div>

    <!-- Add Bootstrap 5 JavaScript and Popper.js script links -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>

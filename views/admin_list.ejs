<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Content Management</title>
    <!-- <link rel="stylesheet" href="/css/style.css"> -->
    <!-- Add Bootstrap 5 CSS link -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body id="indexejs">
    <%- include ('header') -%>

    <div class="mx-5">
        <h1 class="mt-1 ">Content Management</h1>

        <!-- Navigation Menu -->
        <ul class="nav nav-tabs mt-4">
            <li class="nav-item">
                <a class="nav-link active" href="#content-list" data-bs-toggle="tab">Content List</a>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content mt-4">


            <!-- Content List Tab -->
            <div class="tab-pane active" id="content-list">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                        <!-- Content list items go here -->
                        <% ContentData.forEach((content, index) => { %>
                        <tbody>
                            <th><%= content.id_content %></th>
                            <th><%= content.title %></th>
                            <th><%= content.category %></th>
                            <th><%= content.description %></th>
                        </tbody>
                  <%  }); %>

                </table>
            </div>

        </div>
    </div>

    <!-- Add Bootstrap 5 JavaScript and Popper.js script links -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>
